@model Hospital_Information_System.Models.Account.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  	<link rel="stylesheet" href="~/style/style.css">
  </head>
<body>
<div class="container">
<div class="panel-footer" style="margin-top:5px; margin-bottom:20px">
	<!--<div class="jumbotron" style="height:10px; margin-top:20px;">-->
    <h3 style="text-align:center; margin-bottom:10px; background-image:url('image/images%20(3).jpg');">Hospital Management System</h3>
    </div>
    <div class="row">
    	<div class="col-sm-8">        
        	<div class="img">
             <div id="myCarousel" class="carousel slide" data-ride="carousel">
             	<div class="carousel-inner" role="listbox">
                	<div class="item active">
        				<img src="image/Hospital-stuff.jpg" class="img-responsive" alt="Image 1 is missing" style="height:499px;">
      				</div>
                    <div class="item">
        				<img src="image/download.jpg" class="img-responsive" alt="Image 2 is missing" style="height:499px;">
    			    </div>
                    <div class="item">
        				<img src="image/images (1).jpg" class="img-responsive" alt="Image 3 is missing" style="height:499px;">
                    </div>
                </div> 
            </div>
          	</div> 
         </div>
       <div class="col-sm-4"> 
        	<div class="box">
            	<div class="wrap">
                	<div class="login">
                    	<div class="avatar">
                        	<img src="image/images (2).jpg">
						</div>
                        
                         @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                         {

						<input type="text" name="UserName" placeholder="username" required>
						<div class="bar">
							<i></i>
						</div>
						<input type="password" name="Password" placeholder="password" required>
						<a href="#" class="forgot_link">forgot ?</a>
						<button>Sign in</button>
                        
                         }
					</div>	
                </div>
                <div class="inner">
                <img src="image/download (1).jpg"> 
           </div>	
           </div>
           
      </div>
  </div>


  <div class="panel-footer" style="margin-top:10px" >
   <div class="row">
    	<div class="col-sm-4">
        
        </div>
        <div class="col-sm-4" style="font-size:16px">
        <p>&copy; Company | Privacy | Terms</p>
        </div>
        <div class="col-sm-4">
        </div>
	  
  </div>
</div>
</body>
</html>
