    <meta name="description" content="">
    <meta name="author" content="">
    <title>Admin_Doctor</title>
    
    <link href="~/Style/Admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Style/Admin/css/simple-sidebar.css" rel="stylesheet">
    <script src="~/Style/Admin/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/Style/Admin/Script/jquery.canvasjs.min.js"></script>
    <script src="~/Style/Admin/Script/canvasjs.min.js"></script>
    <script src="~/Style/Admin/Script/Script.js"></script>
    <link rel="stylesheet" href="~/Style/Admin/style/style.css">
    <script type="text/javascript" src="~/Style/Admin/canvasjs.min.js"></script>
    <script src="~/Style/Admin/Script/Script.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>


</head>

<body>

    <nav class="navbar navbar-inverse" style="margin-bottom:2px">
        <div class="container-fluid" style="height:80px">
            <div class="navbar-header">
                <a class="navbar-brand" style="color:#FFF; font-size:18px; margin-top:10px">Hospital Management System</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <div class="avatar">
                    <img src="/Style/Admin/image/images (2).jpg">
                </div>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                       <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Welocome  @Convert.ToString(Session["CurrentUser"]) <span class="glyphicon glyphicon-arrow-down"></span> </a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("Logout", "Account")'><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                            
                        </ul>
                    </li>
                </ul>
            </ul>
        </div>
    </nav>

    <div class="row">
        <div class="col-sm-3">
            <div class="container-fluid">
                <div id="wrapper" style="background-color:#9CC">
                    <div id="sidebar-wrapper">
                        <ul class="sidebar-nav">
                            <li class="sidebar-brand" style="background-color:#CCC">
                                <a href="#">HOspital Info System</a>
                            </li>
                            
                            <li>
                                <a href='@Url.Action("Index","Admin")'>
                                    <span class="glyphicon glyphicon-briefcase"> Doctor</span>
                                </a>

                            </li>
                            <li>

                                <a href='@Url.Action("Nurse","Admin")'>
                                    <span class="glyphicon glyphicon-folder-close">  Nurse</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("Patient","Admin")'>
                                    <span class="glyphicon glyphicon-user">  Patient</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span class="glyphicon glyphicon-font">  About</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-sm-9">
            <div class="row" style="text-align:center;margin-right:10px">
                <h4>List of Doctor(s)</h4>

            </div>
            <div class="row" style="background-color:#e0e0e0; margin-right:20px; border:double">
                <div class="col-sm-12">
                    <div class="col-sm-2">
                        <div class="titleBox" style="margin-top:10px"><h4>Doctor(s)</h4> </div>
                    </div>
                    <div class="col-sm-10">
                        <div class="titleBox" style="text-align:right;margin-top:3px">

                            <button id="flip">Add Nurse</button>
                            <div id="panel">
                                @using (Html.BeginForm("AddNurse", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" })) {
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="text" name="FullName" class="form-control" id="inputName" placeholder="Name">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="number" name="Cnic" class="form-control" id="inputCNIC" placeholder="CNIC">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="email" name="Email" class="form-control" id="inputEmail" placeholder="Email">
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="date" name="Birthdate" class="form-control" id="inputDate" placeholder="Date of Birth (dd/mm/yyyy)">
                                        </div>
                                        </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <textarea name="Address" class="form-control" rows="3" id="comment" placeholder="Address"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="number" name="PhoneNo" class="form-control" id="inputPhone" placeholder="Phone">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                            
                                        </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="text" name="Qualification" class="form-control" id="inputQul" placeholder="Qualification">
                                        </div>
                                    </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <input type="text" name="Experience" class="form-control" id="inputExc" placeholder="Experience">
                                            </div>
                                        </div>


                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="date" name="JoiningDate" class="form-control" id="inputJoin" placeholder="Joining Date(dd/mm/yyyy)">
                                        </div>
                                    </div>@*
                                        <div class="row">
                                            <div class="col-sm-6">

                                            <div class="form-group">
                                                <select name="Gender">
                                                    <option value="N">----------------------Gender---------------------</option>
                                                    <option value="">Male</option>
                                                    <option value="B">Female</option>
                                                </select>
                                            </div>
                                        </div>
                                     </div>*@
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="text" name="UserName" class="form-control" id="inputUser" placeholder="User Name">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <input type="password" name="Password" class="form-control" id="inputPass" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                            <div class="form-group">
                                            <input type="file" name="ImageURL" class="form-control" id="inputImage">
                                        </div>
                                    </div>
                                    
                                        <div class="row">


                                        </div>
                                        
                                        <input type="submit" class="btn btn-success" value="Save"/>
                                        <button class="btn btn-danger" id="flop">Cancel</button>

                                }
</form>
                        </div>
                            <!-- <a href="login.html" class="btn btn-success" role="button">Add Patient</a>
                            -->
                        </div>
                    </div>
                </div>
                <div class="row" style="width:auto;height:40px">

                </div>
                <div class="line"></div>
                <div class="col-sm-4">
                   
                </div>
                <div class="col-sm-6" style="margin-top:10px">
                </div>

                <div class="col-sm-2">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="line"></div>
                
                <div class="row col-sm-12">
                    
                    <table  class="table col-sm-9" style="background:#CCC">
                       
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Address</th>
                                <th>BirthDay</th>
                                <th>PhoneNo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model!=null)
                            {
                                foreach (var c in Model) {
                            <tr class="active">
                                <td><img style="width:50px;height:50px;" src='@Url.Content(c.ImageURL)' alt="" class="mpgIcon" /></td>
                                <td>@Html.DisplayFor(model=>c.FullName)</td>
                                <td>@Html.DisplayFor(model=>c.Gender)</td>
                                <td>@Html.DisplayFor(model=>c.Address)</td>
                                <td>@Html.DisplayFor(model=>c.Birthdate)</td>
                                <td>@Html.DisplayFor(model=>c.PhoneNo)</td>
                                <td> 
                                    @Html.ActionLink("View", "DetailEmployee", new { Cnic = c.Cnic }) |
                                    @Html.ActionLink("Edit", "EditEmployee", new {Cnic = c.Cnic }) |
                                    @Html.ActionLink("Delete", "DeleteEmployee", new { Cnic = c.Cnic })
                                </td>
                            </tr>
                               }
                            }
                            else{<p>List Is Empty</p>}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#flip").click(function () {
                $("#panel").slideToggle("slow");
            });
        });
        $(document).ready(function () {
            $("#flop").click(function () {
                $("#panel").slideUp("slow");
            });
        });
    </script>

    <style>
        #panel, #flip {
            padding: 5px;
            text-align: center;
            background-color: #e5eecc;
            border: solid 1px #c3c3c3;
        }

        #panel, #flop {
            padding: 5px;
            text-align: center;
            background-color: #e5eecc;
            border: solid 1px #c3c3c3;
        }

        #panel {
            padding: 50px;
            display: none;
        }

        .bs-mar {
            margin: 20px;
        }


    </style>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });



    </script>

    <div class="panel-footer" style="margin-top:10px; margin-bottom:5px;">
        <div class="row">

            <div style="text-align:center ; font-size:10px">
                <p><strong>Copyright</strong> &copy; 2015 Hospital Management System .All Right Reserved.<br /><br />Site Designed & Developed by <strong>SAAM </strong>Team </p>
            </div>


        </div>
    </div>

</body>

</html>
